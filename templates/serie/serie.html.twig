{% extends 'base.html.twig' %}

{% block title %}Hello SerieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajouter une série</h1>
    {{ form_start(ajoutSerieForm) }}
    <div class="row">
        <div class="col-md-5 mb-0">
            <p class="mt-3 mb-1">Nom de la série<span class="text-danger">*</span></p>{{ form_widget(ajoutSerieForm.nom) }}
            <p class="mt-3 mb-1">Date de sortie<span class="text-danger">*</span></p>{{ form_widget(ajoutSerieForm.dateSortie) }}
            <p class="mt-3 mb-1">Saison Actuelle<span class="text-danger">*</span></p>{{ form_widget(ajoutSerieForm.saisonActuelle) }}
            <p class="mt-3 mb-1">Epidsode Actuel<span class="text-danger">*</span></p>{{ form_widget(ajoutSerieForm.episodeActuel) }}
            <p class="mt-3 mb-1">Categorie<span class="text-danger">*</span></p>{{ form_widget(ajoutSerieForm.categorieId) }}
            <p class="mt-3 mb-1">Série terminée ?<span class="text-danger">*</span></p>{{ form_widget(ajoutSerieForm.terminee) }}
            <p class="mt-3 mb-1">Vignette<span class="text-danger">*</span></p>{{ form_widget(ajoutSerieForm.vignette) }}
        </div>
        <div class="col-md-7" class="mb-0">
            <p class="mt-3 mb-1">Résumé de la série<span class="text-danger">*</span></p>{{ form_widget(ajoutSerieForm.resume, {'attr':{'rows': '7'}})}}
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-5 text-center">
            {{ form_widget(event_form.valider, {'attr': {'class': 'bg-success text-light col-3'}}) }}
        </div>
    </div>
    {{ form_end(event_form) }}
</div>
{% endblock %}
