{% extends 'base.html.twig' %}
{% block Tab %}
    <h2 class="mb-4">Liste des événements</h2>


    <table class="table mb-5">
        <thead class="thead-dark">
        <tr>
            <th scope="col" class="thead-left">#</th>
            <th scope="col">Vignette</th>
            <th scope="col">Nom</th>
            <th scope="col">Description</th>
            <th scope="col">Catégorie</th>
            <th scope="col">Episode actuel</th>
            <th scope="col">Série actuelle</th>
            <th scope="col">Terminée ?</th>
            <th scope="col">Date de sortie</th>
        </tr>
        </thead>
        <tbody>
            {% for serie in series %}
                <tr>
                    <th scope="row">{{ serie.id }}</th>
                    <td>{{ serie.vignette }}</td>
                    <td>{{ serie.nom }}</td>
                    <td>{{ serie.description }}</td>
                    <td>{{ serie.categorieId.nom}}</td>
                    <td>{{ serie.episodeActuel }}</td>
                    <td>{{ serie.saisonActuelle }}</td>
                    <td>{{ serie.terminee }}</td>
                    <td>{{ serie.dateSortie|date("d/m/Y") }}</td>
                    <td><a href="{{ path('deleteSerie', {'id': serie.id}) }}" class="btn btn-danger">Supprimer</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}